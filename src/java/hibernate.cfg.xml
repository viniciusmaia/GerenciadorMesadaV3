<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/gerenciadormesada?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">1234</property>
    <mapping class="br.ifes.gerenciadormesada.entidades.BeneficiadoEntidade"/>
    <mapping class="br.ifes.gerenciadormesada.entidades.CategoriaEntidade"/>
    <mapping class="br.ifes.gerenciadormesada.entidades.GastoEntidade"/>
    <mapping class="br.ifes.gerenciadormesada.entidades.MesadaEntidade"/>
    <mapping class="br.ifes.gerenciadormesada.entidades.PatrocinadorEntidade"/>
  </session-factory>
</hibernate-configuration>
